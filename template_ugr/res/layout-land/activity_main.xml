<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ugr_background" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¡Bienvenido!"
        android:id="@+id/textoBienv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff2c08" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="200dp"
            android:layout_marginLeft="51dp"
            android:layout_height="fill_parent"
            android:baselineAligned="false">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/buttonAlum"
                        android:background="@drawable/ic2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="77.5dp"
                        android:layout_above="@+id/buttonEsta"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Gestión Alumnos"
                        android:id="@+id/textView"
                        android:gravity="center"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/buttonEsta"
                        android:background="@drawable/ic1"
                        android:textAlignment="gravity"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="77.5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/buttonAlum"
                        android:layout_alignStart="@+id/buttonAlum"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Resultados/Estadísticas"
                        android:id="@+id/textView2"
                        android:gravity="center"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2" >

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/buttonEj"
                        android:background="@drawable/ic3"
                        android:textAlignment="gravity"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="77.5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/buttonAlum"
                        android:layout_alignStart="@+id/buttonAlum"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Ejercicios"
                        android:id="@+id/textView3"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/buttonPlay"
                android:background="@drawable/ic4"
                android:textAlignment="gravity"
                android:layout_marginTop="70dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="EMPEZAR"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>